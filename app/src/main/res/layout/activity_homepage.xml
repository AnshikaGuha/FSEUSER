<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".activities.HomepageActivity">

    <ImageView
        android:id="@+id/ivhomepage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvappname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="FSE User"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivhomepage" />

    <TextView
        android:id="@+id/tvwmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvappname" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvhomeicon"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwmessage"
        app:layout_constraintVertical_bias="0.384">
        <ImageView
            android:id="@+id/ivhomeicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bitslogo" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/ivcircle"
        android:layout_width="186dp"
        android:layout_height="185dp"
        android:src="@drawable/circle"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwmessage"
        app:layout_constraintVertical_bias="0.384" />

    <Button
        android:id="@+id/btabout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="192dp"
        android:background="@drawable/about"
        app:layout_constraintEnd_toEndOf="@+id/ivcircle"
        app:layout_constraintTop_toTopOf="@+id/ivcircle" />

    <Button
        android:id="@+id/bthelp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/help"
        app:layout_constraintStart_toStartOf="@+id/ivcircle"
        app:layout_constraintTop_toTopOf="@+id/ivcircle" />

    <Button
        android:id="@+id/btcontact"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivcircle" />

    <Button
        android:id="@+id/btlogin"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/login"
        app:layout_constraintBottom_toBottomOf="@+id/ivcircle"
        app:layout_constraintEnd_toEndOf="@+id/ivcircle" />

    <Button
        android:id="@+id/btprofile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="@+id/ivcircle"
        app:layout_constraintEnd_toEndOf="@+id/ivcircle" />

    <Button
        android:id="@+id/btregister"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/register"
        app:layout_constraintBottom_toBottomOf="@+id/ivcircle"
        app:layout_constraintStart_toStartOf="@+id/ivcircle" />

    <Button
        android:id="@+id/btlogout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="@+id/ivcircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toStartOf="@+id/ivcircle" />

    <FrameLayout
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>